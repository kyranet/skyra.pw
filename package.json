{
	"name": "@skyra-project/dashboard",
	"version": "1.0.0",
	"private": true,
	"license": "Apache-2.0",
	"scripts": {
		"build": "vue-tsc --noEmit && vite build",
		"dev": "vite --port 3333 --open",
		"format": "prettier --write --loglevel=error src/**/*.{js,jsx,ts,tsx}",
		"lint": "eslint src --ext .ts,.vue --fix",
		"test:lint": "eslint src --ext .ts,.vue",
		"prepare": "husky install .github/husky",
		"serve": "vite preview",
		"typecheck": "tsc -b src -w",
		"update": "yarn upgrade-interactive --latest"
	},
	"dependencies": {
		"@sapphire/utilities": "^2.0.1",
		"@skyra/discord-components-core": "^2.8.1",
		"@vueuse/core": "^6.0.0",
		"@vueuse/head": "^0.6.0",
		"focus-visible": "^5.2.0",
		"vue": "^3.2.6",
		"vue-authenticate": "^1.5.0",
		"vue-infinite-loading": "^2.4.5",
		"vue-router": "^4.0.11",
		"vue-tippy": "^6.0.0-alpha.32",
		"vuedraggable": "^2.24.3",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@iconify/json": "^1.1.396",
		"@sapphire/plugin-api": "^2.2.0",
		"@sapphire/prettier-config": "^1.1.6",
		"@sapphire/ts-config": "^3.0.0",
		"@skyra/audio": "^1.2.1",
		"@tailwindcss/forms": "^0.3.3",
		"@tailwindcss/typography": "^0.4.1",
		"@types/workbox-build": "^5.0.1",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"@vitejs/plugin-vue": "^1.6.0",
		"@vue/compiler-sfc": "^3.2.6",
		"@vuedx/typescript-plugin-vue": "^0.7.4",
		"autoprefixer": "^10.3.3",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.22.0",
		"discord.js": "^13.1.0",
		"eslint": "^7.32.0",
		"eslint-config-marine": "^9.0.6",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^7.17.0",
		"husky": "^7.0.2",
		"lint-staged": "^11.1.2",
		"postcss": "^8.3.6",
		"postcss-focus-visible": "^5.0.0",
		"prettier": "^2.3.2",
		"pretty-quick": "^3.1.1",
		"tailwindcss": "^2.2.9",
		"typescript": "4.4.2",
		"utility-types": "^3.10.0",
		"vite": "^2.5.3",
		"vite-plugin-components": "^0.13.3",
		"vite-plugin-icons": "^0.6.5",
		"vite-plugin-pages": "^0.18.0",
		"vite-plugin-pwa": "^0.11.2",
		"vue-eslint-parser": "^7.10.0",
		"vue-tsc": "^0.3.0",
		"workbox-cacheable-response": "^6.2.4",
		"workbox-core": "^6.2.4",
		"workbox-expiration": "^6.2.4",
		"workbox-precaching": "^6.2.4",
		"workbox-routing": "^6.2.4",
		"workbox-strategies": "^6.2.4"
	},
	"lint-staged": {
		"*.{mjs,js,jsx,ts,tsx}": "eslint --fix --ext mjs,js,jsx,ts,tsx"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/skyra.pw.git"
	},
	"bugs": {
		"url": "https://github.com/skyra-project/skyra.pw/issues"
	},
	"resolutions": {
		"acorn": "^8.4.1",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"lodash": "^4.17.21",
		"object-path": "^0.11.5",
		"webpack": "^5.50.0"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"marine/prettier/node",
			"marine/prettier/vue"
		],
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		}
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {},
			"postcss-focus-visible": {},
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"prettier": "@sapphire/prettier-config"
}
